{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "rootDirs": ["src"],
    "outDir": "./build",
    "declaration": true,
    "esModuleInterop": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "types": ["node"],
    "useDefineForClassFields": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
